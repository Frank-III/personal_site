---
import { string } from "astro/zod";
import Layout from "../layouts/Global.astro";

// const {title, image, date, modified, description} = Astro.props;
const {content} = Astro.props;
const {data, slug} = content;
//headings
interface Heading {
  depth: number; 
  text: string;
  slug: string;
}

const { headings } = await content.render();
---

<Layout
  title={data.title}
  description={data.description}
>
  <!-- We need to use is:inline in order to apply the style to the children -->
  <style is:inline>
    article h1,
    article h2,
    article h3,
    article h4,
    article h5,
    article h6 {
      font-weight: 700;
      color: #ffffffde;
      margin-bottom: 4px;
      margin-top: 32px;
    }
    article h1 {
      font-size: 28px;
    }
    article a {
      text-decoration: underline;
      color: #b9b8b8;
    }
    article a:hover {
      /* Gradient */
      background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;
      text-decoration: none;
      transition: all 0.25s ease-in-out;
    }

    article h2 {
      font-size: 20px;
    }
    article h3 {
      font-size: 18px;
    }
    article h4,
    article h5,
    article h6 {
      font-size: 16px;
      margin-top: 8px;
      margin-bottom: 8px;
    }

    article p {
      margin-top: 10px;
      margin-bottom: 10px;
    }

    article li,
    article a,
    article span,
    article strong {
      font-size: 15px;
      font-weight: 400;
      color: #b9b8b8;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      color: #fff;
      background-color: #151e24;
      box-shadow: 0 0 0 1px #fff inset;
      margin-top: 10px;
      margin-bottom: 10px;
    }

    table th,
    table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    table th {
      background-color: #0f151b;
    }

    table td {
      background-color: #101820;
    }

    table tr:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }

    table caption {
      padding: 10px;
      font-weight: bold;
      font-size: 1.2em;
      color: #fff;
      background-color: #0f151b;
    }

    .astro-code {
      border-radius: 4px;
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      /* padding-left: 1rem; */
      padding-inline: 1rem;
    }
    /* For mobile screen */
    @media (max-width: 640px) {
      article h1 {
        font-size: 24px;
      }
      article h2 {
        font-size: 20px;
      }
      article h3 {
        font-size: 18px;
      }
      article h4 {
        font-size: 16px;
      }
      article h5,
      article h6 {
        font-size: 16px;
      }
      article p,
      article li,
      article a,
      article span {
        font-weight: 400;
        color: #b9b8b8;
        font-size: 14px;
      }
    }
  </style>
  <script>
    import { annotate } from "rough-notation";
    document.querySelectorAll("strong").forEach((el) => {
      console.log(el);

      const annotation = annotate(el, {
        type: "underline",
        iterations: 1,
        padding: 2,
        // Yellow for dark mode
        color: "#f9f871",
      });
      annotation.show();
    });
  </script>
  <div class="max-w-2xl mx-auto">
    <img
      class="w-full object-cover rounded-lg aspect-video mb-4 md:mt-8 transition-all"
      src={"/personal_site/images/" + data.image}
      alt={data.title}
    />

    <h1
      class="text-xl mb-1 max-w-fit font-semibold bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent md:text-2xl"
    >
      {data.title}
    </h1>
    <p
      class="text-neutral-400 text-sm pb-2 mb-6 font-normal border-b-neutral-700 border-b"
    >
      {data.description}
    </p>
    <div class="gap-x-10 lg:flex lg:items-start">
		{
			!!headings.length && (
				<aside class="sticky top-20 order-2 -me-32 hidden basis-64 lg:block">
					<h2 class="font-semibold">Table of Contents</h2>
					<ul class="mt-4 text-sm">
						{headings.map(({ depth, slug, text }: Heading) => (
							<li class="headingl line-clamp-2">
								<a
									class={`block ${depth <= 2 ? "mt-3" : "mt-2 ps-3 text-[0.7875rem]"}`}
									href={`#${slug}`}
									aria-label={`Scroll to section: ${text}`}
								>
									<span>{"#".repeat(depth)}</span> {text}
								</a>
							</li>
						))}
					</ul>
				</aside>
			)
		}
    </div>
    <article class="mb-8">
      <slot />
    </article>
  </div>
</Layout>

<style>
  .headingl:hover {
    /* Gradient */
    background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    text-decoration: none;
    transition: all 0.25s ease-in-out;
  }
</style>