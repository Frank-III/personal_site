---
export interface Props {
  title: string;
  description: string;
  schema?: Object;
}
import NavBar from "../components/NavBar.astro";

const { title, description, schema } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="color-scheme" content="dark light" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="view-transition" content="same-origin" />
    <style is:inline>
      html {
        visibility: hidden;
        opacity: 0;
      }
    </style>
    <link rel="icon" type="image/svg+xml" href="/personal_site/favicon.svg" />
    <title>{title || "Frank W's Blog"}</title>
  </head>

  <body class="p-6 mx-auto min-h-screen dark:bg-[#151e24] bg-[#f9fcff]">
    <div
      id="no-flash-screen"
      style="background-color: #454d53; position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 9999;"
    >
    </div>
    <script>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      document.documentElement.classList.add(theme);

      // Once you've set the theme, you can remove the no flash screen
      document.getElementById("no-flash-screen").style.display = "none";

      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");
        element.classList.toggle("light");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      };

      document
        .getElementById("checkbox")
        .addEventListener("click", handleToggleClick);
    </script>
    <style is:global>
      body {
        max-width: 800px;
      }

      main {
        min-height: 74vh;
      }

      /* inter-regular - latin */
      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 400;
        src: local(""),
          url("/personal_site/fonts/inter-v12-latin-regular.woff2")
            format("woff2"),
          /* Chrome 26+, Opera 23+, Firefox 39+ */
            url("/personal_site/fonts/inter-v12-latin-regular.woff")
            format("woff"); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
        font-display: swap;
      }

      /* inter-500 - latin */
      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 500;
        src: local(""),
          url("/personal_site/fonts/inter-v12-latin-500.woff2") format("woff2"),
          /* Chrome 26+, Opera 23+, Firefox 39+ */
            url("/personal_site/fonts/inter-v12-latin-500.woff") format("woff"); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
        font-display: swap;
      }

      /* inter-600 - latin */
      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 600;
        src: local(""),
          url("/personal_site/fonts/inter-v12-latin-600.woff2") format("woff2"),
          /* Chrome 26+, Opera 23+, Firefox 39+ */
            url("/personal_site/fonts/inter-v12-latin-600.woff") format("woff"); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
        font-display: swap;
      }

      /* inter-700 - latin */
      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 700;
        src: local(""),
          url("/personal_site/fonts/inter-v12-latin-700.woff2") format("woff2"),
          /* Chrome 26+, Opera 23+, Firefox 39+ */
            url("/personal_site/fonts/inter-v12-latin-700.woff") format("woff"); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
        font-display: swap;
      }

      /* Define background color var */

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Inter", sans-serif;
        font-weight: 600;
        letter-spacing: -0.05em;
        transition: font-size 0.3s;
      }
      p,
      button,
      a {
        font-family: "Inter", sans-serif;
        font-weight: 400;
        letter-spacing: -0.01em;
        transition: font-size 0.3s;
      }
      p,
      button {
        color: black;
      }

      ul {
        list-style: disc;
        padding-inline-start: 16px;
        margin-left: 16px;
      }
      html {
        visibility: visible !important;
        opacity: 1 !important;
      }

      /* .content-container {
        view-transition-name: content-blocks
      }
      @keyframes slide-left {
        from {
          left: 0%;
        }
        to {
          left: -100%;
        }
      }

      @keyframes slide-right {
        from {
          left: 100%;
        }
        to {
          left: 0%;
        }
      }

      ::view-transition-old(content-blocks) {
        animation-name: slide-left;
      }

      ::view-transition-new(content-blocks) {
        animation-name: slide-right;
      } */
    </style>
    <NavBar />
    <main>
      <slot />
    </main>
    <footer class="pb-2 pt-12 text-center">
      <p class="text-white/40 text-sm">Created by Jiangda Wang</p>
    </footer>
  </body>
</html>
